<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.SlideUp" parent="AppTheme">
        <item name="android:windowEnterTransition">@transition/slide_up</item>
        <item name="android:windowTransitionBackgroundFadeDuration">900</item>
    </style>

    <style name="AppTheme.SlideDown" parent="AppTheme">
        <item name="android:windowEnterTransition">@transition/slide_down</item>
        <item name="android:windowTransitionBackgroundFadeDuration">900</item>
    </style>

    <style name="AppTheme.SlideRight" parent="AppTheme">
        <item name="android:windowEnterTransition">@transition/slide_right</item>
        <item name="android:windowTransitionBackgroundFadeDuration">900</item>
    </style>

    <style name="AppTheme.SlideLeft" parent="AppTheme">
        <item name="android:windowEnterTransition">@transition/slide_left</item>
        <item name="android:windowTransitionBackgroundFadeDuration">900</item>
    </style>

    <style name="AppTheme.FadeIn" parent="AppTheme">
        <item name="android:windowEnterTransition">@transition/fade_in</item>
        <item name="android:windowTransitionBackgroundFadeDuration">900</item>
    </style>

    <style name="AppTheme.FadeOut" parent="AppTheme">
        <item name="android:windowEnterTransition">@transition/fade_out</item>
        <item name="android:windowTransitionBackgroundFadeDuration">900</item>
    </style>

